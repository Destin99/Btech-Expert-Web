{% extends 'base.html.twig' %}

{% block carousel %} {% endblock %} 

{% block content %}

        <!-- START THE FEATURETTES -->

        <div class="row">
            {% for about in abouts %}
            <div class="col-md-7">
                <h2 class="featurette-heading">A propos de nous </h2>
                <p class="lead">{{about.description|striptags}}</p>
            </div>
            <div class="col-md-5">
                <img  src="/upload/{{about.getImage()}}"  width="400" height="400">
            </div>
            {% endfor %}
        </div>

        <hr class="featurette-divider">

        <h1 class="">Nos Services</h1>
        <div class="row mt-2">
            {% for se in services %}
            <div class="col-12 col-md-3">
                <div class="card">
                        <a href="#">
                        <img src="upload/{{se.image}}" alt ="Image tourisme" class="card-img-top" title="Image grotte" />
                        </a>
                        <div class="card-body">
                            <h5 class="card-title"><a href="#">{{se.titre}}</a></h5>
                            <p class="card-text small">{{se.description|striptags}}</p>
                        </div>
                    </div>
            </div>
            {% endfor %}

        </div>

        <hr class="featurette-divider">

        <h2 class="text-center">Ils nous font confiance... </h2>
        <div class="container align-self-center p-5">
            <div class="row">
                {% for cl in clients %}
                <div class="col-lg-2">
                    <img  src="upload/{{cl.image}}" alt="carrefour" width="100" height="90">   
                </div><!-- /.col-lg-2 -->
                {% endfor %}
            </div><!-- /.row -->
        </div>
        <hr class="featurette-divider">
        

        <!-- /END THE FEATURETTES -->

