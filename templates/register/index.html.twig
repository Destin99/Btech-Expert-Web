{% extends 'base.html.twig' %}

{% block title %}Cr√©er votre compte{% endblock %}

{% block content %}
    <h1>Inscription</h1>
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">{{ form_row(form.nom) }}</div>
            <div class="col-md-6">{{ form_row(form.prenom) }}</div>
            <div class="col-md-12">{{ form_row(form.adresse) }}</div>
            <div class="col-md-6">{{ form_row(form.phone) }}</div>
            <div class="col-md-6">{{ form_row(form.email) }}</div>
            <div class="col-md-6">{{ form_row(form.password) }}</div>
        </div>
        
    {{ form_end(form) }}
    
{% endblock %}

