{% extends 'base.html.twig' %}

{% block title %}Nos actualités{% endblock %}

{% block content %}
<h1 class="text-center">Nos actualités</h1>
<div class="row mt-2">
    {% for a in actualy %}
  <div class="col-12 col-md-3">
	    <a href="#" class="a-block no_souligne" style="background-image: url('/upload/{{a.getUrlImage()}}');">
		    <div class="card">
		        <div class="card-body btn btn-primary">
			        <span class="text-white">{{a.category.name}}</span>
			        <span class="mr-2 text-dark">{{a.getCreatedAt()}}</span>
		        </div>
			    <h4 class="card-title">{{a.titre}}</h4>
			    <p class="card-text text-white">{{a.description|striptags}}</p>
		    </div>
	    </a>
    </div>
    {% endfor %}
</div>
		
{% endblock %} 